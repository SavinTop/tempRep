<?xml version="1.0" ?>
<robot name="wheely_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="wheelInertial" params="mass radius height">
<xacro:property name="__ixx" value="${1/12*mass*(3*radius*radius+height*height)}"/>
<inertia ixx="${__ixx}"  ixy="0"  ixz="0" iyy="${__ixx}" iyz="0" izz="${1/2*mass*radius*radius}" />
</xacro:macro>

<link name="dummy"/>

<joint name="dummy_joint" type="fixed">
  <parent link="dummy"/>
  <child link="robot_base"/>
  <origin xyz="0.0 0 0" rpy="0 0 0"/>
  <axis xyz="0 0 0"/>
</joint>

<link name="robot_base">
    <visual>
        <geometry>
            <box size="1.0 1.0 0.2"/>
        </geometry>
        <material name="orange"/>
    </visual>
    <collision>
        <geometry>
            <box size="1.0 1.0 0.2"/>
        </geometry>
  </collision>
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <mass value="10"/>
    <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
  </inertial>
</link>

<link name="left_wheel">
    <visual>
        <geometry>
            <cylinder length="0.2" radius="0.2"/>
        </geometry>
    </visual>
    <collision>
        <geometry>
            <cylinder length="0.2" radius="0.2"/>
        </geometry>
    </collision>
  <inertial>
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
    <mass value="1"/>
    <xacro:wheelInertial mass = "1" radius="0.2" height="0.2"/>
  </inertial>
</link>

<link name="right_wheel">
    <visual>
        <geometry>
            <cylinder length="0.2" radius="0.2"/>
        </geometry>
    </visual>
    <collision>
        <geometry>
            <cylinder length="0.2" radius="0.2"/>
        </geometry>
    </collision>
  <inertial>
    <origin xyz="0 0 0.0" rpy="0 0 0"/>
    <mass value="1"/>
    <xacro:wheelInertial mass = "1" radius="0.2" height="0.2"/>
  </inertial>
</link>

<link name="front_holder">
  <inertial>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <mass value="1.0"/>
    <xacro:wheelInertial mass = "1" radius="0.2" height="0.2"/>
  </inertial>
  <visual>
    <geometry>
      <sphere radius="0.1"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <sphere radius="0.1"/>
    </geometry>
  </collision>
</link>

<link name="back_holder">
  <inertial>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <mass value="1.0"/>
    <xacro:wheelInertial mass = "1" radius="0.2" height="0.2"/>
  </inertial>
  <visual>
    <geometry>
      <sphere radius="0.1"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <sphere radius="0.1"/>
    </geometry>
  </collision>
</link>

<joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0 0 0.4" rpy="0 0 -1.57"/>
    <parent link="robot_base"/>
    <child link="camera_link"/>
  </joint>

  <!-- Camera -->
  <link name="camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
    <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

<!-- camera -->
  <gazebo reference="camera_link">
    <sensor type="camera" name="camera1">
      <update_rate>30.0</update_rate>
      <camera name="head">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>rrbot/camera1</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera_link</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>

<joint name="base_to_lwheel" type="continuous">
  <parent link="robot_base"/>
  <child link="left_wheel"/>
  <origin xyz="0.6 0 0" rpy="0 1.57079632679 0"/>
  <axis xyz="0 0 1"/>
</joint>

<joint name="base_to_rwheel" type="continuous">
  <parent link="robot_base"/>
  <child link="right_wheel"/>
  <origin xyz="-0.6 0 0" rpy="0 1.57079632679 0"/>
  <axis xyz="0 0 1"/>
</joint>

<joint name="base_to_fholder" type="continuous">
  <parent link="robot_base"/>
  <child link="front_holder"/>
  <origin xyz="0.0 -0.8 -0.095" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
</joint>

<joint name="base_to_bholder" type="continuous">
  <parent link="robot_base"/>
  <child link="back_holder"/>
  <origin xyz="0.0 0.8 -0.095" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
</joint>


<gazebo reference="front_holder">
<material>Gazebo/Blue</material>
</gazebo>



